{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@easylogin/core": ["packages/core/src"],
      "@easylogin/types": ["packages/types/src"],
      "@easylogin/github": ["packages/github/src"],
      "@easylogin/email": ["packages/email/src"],
      "@easylogin/gitee": ["packages/gitee/src"],
      "@easylogin/google": ["packages/google/src"],
      "@easylogin/react": ["packages/react/src"]
    }
  },
  "include": ["./packages/**/*.ts"],
  "exclude": ["**/node_modules", "**/dist"]
}
